docker run --name postgresql -e POSTGRES_USER=admin -e POSTGRES_PASSWORD=test -e POSTGRES_DB=loop -p 127.0.0.1:5432:5432 -v /data:/var/lib/postgresql/data -d postgres
docker run -d --network=host \
  -e "DB_DBNAME=loop" \
  -e "DB_PORT=5432" \
  -e "DB_USER=admin" \
  -e "DB_PASS=test" \
  -e "DB_HOST=127.0.0.1" \
  --name postgresql postgres

